<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/icon_drag"
        android:layout_width="35dp"
        android:layout_height="wrap_content"

        android:padding="5dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_drag_row_holo_dark"/>

    <View
        android:layout_height="fill_parent"
        android:layout_width="@dimen/small_divider"
        android:layout_marginTop="@dimen/small_divider_margin"
        android:layout_marginBottom="@dimen/small_divider_margin"
        android:background="@color/divider_line"/>

    <LinearLayout
        android:id="@+id/ll_rolls"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="5dp"
        android:clickable="true"
        android:background="@drawable/flat_button_background">
    
        <TextView
            android:id="@+id/tv_init_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:maxLines="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_check_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/skill_check_text"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_height="fill_parent"
        android:layout_width="@dimen/small_divider"
        android:layout_marginTop="@dimen/small_divider_margin"
        android:layout_marginBottom="@dimen/small_divider_margin"
        android:background="@color/divider_line"/>
    
    <TextView 
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>