<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo"/>
    
  	<style name="navDrawerStyle">
  	    <item name="android:layout_width">300dp</item>
  	    <item name="android:layout_height">match_parent</item>
  	    <item name="android:layout_gravity">start</item>
  	    <item name="android:choiceMode">singleChoice</item>
  	    <item name="android:divider">@android:color/transparent</item>
  	    <item name="android:dividerHeight">0dp</item>
  	    <item name="android:background">@color/holoDialogGrey</item>
  	</style>
  	
  	<style name="listDividerStyle">
  	    <item name="android:layout_width">fill_parent</item>
  	    <item name="android:layout_height">1dp</item>
  	    <item name="android:background">#10FFFFFF</item>
  	</style>
  	
  	<style name="clickable_text_view">
  	    <item name="android:clickable">true</item>
  	    <item name="android:enabled">true</item>
  	    <item name="android:background">@drawable/clickable_text_background</item>
  	    <item name="android:padding">3dp</item>
  	</style>
  	
  	<style name="row_header_bar">
  	    <item name="android:paddingLeft">5dp</item>
  	    <item name="android:paddingRight">5dp</item>
  	    <item name="android:paddingTop">3dp</item>
  	    <item name="android:paddingBottom">3dp</item>
  	    <item name="android:background">@color/holo_dialog_lighter_grey</item>
  	</style>

  	<style name="dividerless_list">
  	    <item name="android:divider">@null</item>
  	    <item name="android:dividerHeight">0dp</item>
  	</style>
</resources>