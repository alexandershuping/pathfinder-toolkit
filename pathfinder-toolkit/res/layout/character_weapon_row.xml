<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/weaponName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold|italic"
            android:layout_weight="0.4"/>
        
        <TextView
            android:text="@string/weapon_damage_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponDamage"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"/>
        
    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="horizontal"
       android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="@string/weapon_total_attack_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>
        
        <TextView
            android:text="@string/weapon_critical_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponCrit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"/>
        
        <TextView
            android:text="@string/weapon_type_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponType"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"/>
        
    </LinearLayout>

  
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="horizontal"
       android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        
        
        <TextView
            android:text="@string/weapon_size_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponSize"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"/>
        
        <TextView
            android:text="@string/weapon_weight_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponWeight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"/>
        
        <TextView
            android:text="@string/weapon_range_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponRange"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"/>
        
    </LinearLayout>
    
        
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="horizontal"
       android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="@string/Weapon_special_properties"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/weaponSpecial"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        
    </LinearLayout>
    

</LinearLayout>